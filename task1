package tasks;
import java.util.Random;
import java.util.Scanner;

public class task1 {
	public static void playGame() {
		Scanner sc=new Scanner(System.in);
		Random random=new Random();
		int k=5, attempts=0;
		int score = 0;
		int storedNumber= random.nextInt(100) + 1;
		
		
		while(attempts<k) {
			System.out.println("Enter your number: ");
			int userGuess=sc.nextInt();
			attempts++;
			
			if(userGuess==storedNumber) {
				System.out.println("Congratulations! You guessed the number correctly.");
				score=((k+1)-attempts)*10;
				System.out.println("Score is: "+score);
				break;
			}
			else if(userGuess<storedNumber){
				System.out.println("Your guess is too low");
				
			}
			else if(userGuess>storedNumber){
				System.out.println("Your guess is too high");
			}
			}if(k==attempts) {
		System.out.println("You exhausted your limit. The number is: "+storedNumber);
		System.out.println("Score is: "+ score);
		}		
	}
	public static void main(String args[]) {
			Scanner sc=new Scanner(System.in);
			String playAgain;
			do{
				playGame();
				System.out.println("If you want to play again type: 'YES', Otherwise type 'NO'");
				playAgain=sc.next();
			}while(playAgain.equalsIgnoreCase("yes"));
			System.out.println("Exiting...");
			sc.close();
		}
	}

		
